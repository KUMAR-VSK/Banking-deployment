{
  "version": 2,

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://banking-deployment.onrender.com/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],

  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],

  "env": {
    "REACT_APP_API_BASE_URL": "https://banking-deployment.onrender.com"
  }
}
